  "main": "dist/mauerwerk",
  "module": "dist/mauerwerk.es",
  "sideEffects": false,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "prepare": "npm run build",
    "test": "echo no tests yet"
