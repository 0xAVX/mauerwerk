    "enzyme-to-json": "3.3.4",
    "husky": "^1.0.0-rc.13",
    "jest": "23.6.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "react": "16.5.0",
    "react-dom": "16.5.0",
    "rimraf": "2.6.2",
    "rollup": "0.65.2",
    "rollup-plugin-babel": "4.0.3"
  },
  "peerDependencies": {
    "prop-types": "15.x.x",
    "react": ">= 16.4.0",
    "react-dom": ">= 16.4.0"
